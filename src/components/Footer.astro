---
import {Icon} from 'astro-icon';
---

<script is:inline>
  const show = window.scrollY;
  let vis = 'hidden';
  if (show !== 0) {
    vis = 'visible';
  }
</script>

<footer
  class:list={[
    'fixed clear-both z-50 bottom-0 footer flex gap-40 items-center border-t bg-[#efefef]  min-h-12 w-full  h-12',
  ]}
>
  <div class="flex justify-around items-center w-full max-w-5xl mx-auto h-12">
    <a href="https://github.com/MatthijsvanderPlas" target="_blank" class="w-8 h-8"
      ><Icon name="uil:github" /></a
    >
    <a href="https://www.linkedin.com/in/matthijsvanderplas/" target="_blank" class="w-8 h-8"
      ><Icon name="uil:linkedin" /></a
    >
    <a href="#top" class="w-8 h-8"><Icon name="uil:top-arrow-from-top" /></a>
  </div>
</footer>

<style define:vars="vis">
  footer {
    visibility: --var(vis);
  }
</style>
